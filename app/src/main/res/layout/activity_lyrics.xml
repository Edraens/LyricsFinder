<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LyricsActivity">

    <TextView
            android:text="info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lyrics_textInfo"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:text="lyrics"
            android:layout_width="368dp"
            android:layout_height="485dp"
            android:textColor="@android:color/black"
            android:scrollbars="vertical"
            android:id="@+id/lyrics_textLyrics"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/lyrics_textInfo"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>